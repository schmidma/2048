CC=gcc
LDFLAGS= -lmingw32 -lSDL2main -lSDL2 -lopengl32 -lSDL2_ttf

all: run

2048.exe: obj/main.o obj/move.o
	$(CC) -o 2048.exe obj/main.o obj/move.o $(LDFLAGS)

obj/main.o: src/main.c
	$(CC) -c -o obj/main.o src/main.c

obj/move.o: src/move.c
	$(CC) -c -o obj/move.o src/move.c

testSDL.exe: src/testSDL.c
	$(CC) -o testSDL.exe src/testSDL.c $(LDFLAGS)

run: 2048.exe
	2048.exe
